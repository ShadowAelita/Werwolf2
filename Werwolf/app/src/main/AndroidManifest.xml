<manifest package="com.example.werewolfmoderator"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:allowBackup="true"
        android:label="Werwolf Moderator"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.WerewolfModerator">
        <activity android:name=".SummaryActivity" />
        <activity android:name=".DayActivity" />
        <activity android:name=".NightActivity" />
        <activity android:name=".RoleSelectionActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
